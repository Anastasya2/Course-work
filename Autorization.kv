<FirstWindow>:
    name: 'first'

    Image:
        source:"background.png"

    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        Widget:
            size_hint:1,2.7

        BoxLayout:
            orientation:"vertical"

            Label:
                text:"Удобное отслеживание данных"
                font_size: 25
                size_hint: (1,1.9)
                color: (44/255, 37/255, 198/255,1)
                bold: True
                outline_color: (0,0,0)
                outline_width: 1

            Image:
                source:"pill.png"
                size_hint: (1,4.3)

        Label:
            text:"Добавляйте лекарства, глюкозу,  "
            font_size: 20
            size_hint: (1,.3)
            markup: True
            color: (44/255, 37/255, 198/255,1)
            bold: True
            italic: True

        Label:
            text:" давление и другое..."
            font_size: 20
            size_hint: (1,.2)
            markup: True
            color: (44/255, 37/255, 198/255,1)
            bold: True
            italic: True

        AnchorLayout:

            Button:
                anchor_x:"center"
                anchor_y:"center"
                size_hint:(.2,.8)
                background_normal:"arrow.png"
                font_size:32
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"

        Widget:
            size_hint:1,1.2



