<FirstWindow>:
    name: 'first'

    Image:
        source:"ppp9.png"

    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        Widget:
            size_hint:1,2.7

        BoxLayout:
            orientation:"vertical"

            Label:
                text:"Convenient tracking"
                font_size: 30
                size_hint: (1,1.9)
                color: (40/255, 23/255, 246/255,1)
                bold: True
                outline_color: (0,0,0)
                outline_width: 1

            Image:
                source:"f222.png"
                size_hint: (1,1.9)

        Label:
            text:"Log meals, meds, blood sugar "
            font_size: 20
            size_hint: (1,.3)
            markup: True
            color: (40/255, 23/255, 246/255,1)
            bold: True
            italic: True
            #outline_color: (0,0,0)
            #outline_width: 1

        Label:
            text:"and more..."
            font_size: 20
            size_hint: (1,.2)
            markup: True
            color: (40/255, 23/255, 246/255,1)
            bold: True
            italic: True
            #outline_color: (0,0,0)
            #outline_width: 1

        AnchorLayout:

            Button:
                anchor_x:"center"
                anchor_y:"center"
                size_hint:(.2,.8)
                background_normal:"fff13.png"
                font_size:32
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"

        Widget:
            size_hint:1,1.2




